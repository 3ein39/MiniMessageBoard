<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
<!--  loop through messages and add them to divs-->
    <div id="messages">
      <% messages.forEach(function(message){ %>
        <div class="message">
<!--          text, user and date-->
            <p><%= message.text %></p>
            <p><%= message.user %></p>
            <p><%= message.added %></p>
        </div>
      <% }) %>
    </div>
<!--  link to the form for adding new messages-->
    <a href="/new">Add a new message</a>
  </body>
</html>
