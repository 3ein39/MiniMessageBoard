<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <link rel="stylesheet" href="/stylesheets/index.css">
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
<!--  loop through messages and add them to divs-->
    <div id="messages">
      <% messages.forEach(function(message){ %>
        <div class="message">
<!--          text, user and date-->
            <div class="message-content">
            <p class="message-text"><%= message.text %></p>
            <p class="message-user"><%= message.user %></p>
            </div>
            <p class="message-date"><%= message.added %></p>

        </div>
      <% }) %>
    </div>
<!--  link to the form for adding new messages-->
    <a href="/new">Add a new message</a>
  </body>
</html>
